<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>QCCHub | Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
@{ Layout = null;}
@model QccHub.DTOS.UserRegisteration
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo"> QccHub </div>
        <div class="card">
            <div class="card-body login-card-body">
                <form action="@Url.Content("~/Account/Register")" method="post" role="form">
                    @Html.AntiForgeryToken();
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="email" asp-for="Email" required class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group">
                            <input asp-for="Password" type="password" required class="form-control" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" required class="form-control" placeholder="Confirm Password">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group">
                            <input asp-for="PhoneNumber" type="text" required class="form-control" placeholder="Phone Number">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group">
                            <input asp-for="RoleId" type="number" required class="form-control" placeholder="RoleId">
                            <small>1 for Admin, 2 for company, 3 for regular user (employee)</small>
                        </div>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <span class="text-danger">
                        @Html.ValidationMessage("Error")
                    </span>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>