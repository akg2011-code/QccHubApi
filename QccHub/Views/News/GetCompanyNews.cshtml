@model IEnumerable<News>

<main id="main">
    <div class="JobContent">
        <section class="container">
            <div class="row">
                <!-- left side -->
                <div class="col-md-3">
                    <div class="left all">
                        <div class="postJob">
                            <div class="imgCompany">
                                <img src="assets/img/Rectangle 60.png" style="height:158px;">
                            </div>
                            <div class="CompanyName">
                                <h4>
                                    Swan Global WLL
                                </h4>
                                <p>Looking for talent?</p>
                                <hr>
                                <button class="btn btn-outline-info">Post A Job</button>
                            </div>
                        </div>

                        <div class="yourJobs">
                            <div class="uniDeails">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4>Resident Engineer</h4>
                                        <h6>Sinopack</h6>
                                        <small><i class="fas fa-map-marker-alt"></i> Qatar</small>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="assets/img/Rectangle 86.png" style="height: 46px;">
                                    </div>
                                </div>
                                <div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        </div>
                                        <div class="col-md-6" style="font-size: 89%;">
                                            <small style="color: #ea222a;">3.74</small><small>(567 reviews)</small>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="detailsJob">
                                        <div class="row text-center">
                                            <div class="col-md-6">
                                                <small>Salaries</small>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="label-danger">Open Job</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="yourJobs">
                            <div class="uniDeails">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4>Resident Engineer</h4>
                                        <h6>Sinopack</h6>
                                        <small><i class="fas fa-map-marker-alt"></i> Qatar</small>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="assets/img/Rectangle 86.png" style="height: 46px;">
                                    </div>
                                </div>
                                <div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        </div>
                                        <div class="col-md-6" style="font-size: 89%;">
                                            <small style="color: #ea222a;">3.74</small><small>(567 reviews)</small>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="detailsJob">
                                        <div class="row text-center">
                                            <div class="col-md-6">
                                                <small>Salaries</small>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="label-danger">Open Job</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div>
                </div>
                <!-- center side -->
                <div class="col-md-9">
                    <div class="center all">
                        <!-- education-sction -->
                        <!-- search input -->
                        <div class="Education details-Edu-Expe-Certi">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Search News..." aria-label="Recipient's username"
                                       aria-describedby="button-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-danger" type="button" id="button-addon2"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>

                        @foreach (var item in Model)
                        {
                            <div class="Education details-Edu-Expe-Certi">
                                <div class="univeristy">
                                    <!-- job one -->
                                    <div class="uniDeails">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <img src="assets/img/Rectangle 127.png" style="height: 269px;width: 100%;">
                                            </div>
                                            <div class="col-md-8">
                                                <h4>@item.Title</h4>
                                                <div class="alert alert-danger" role="alert">
                                                    <a href="#" class="alert-link">@item.Source</a>.
                                                </div>
                                                <p>
                                                    @item.Details
                                                </p>
                                                <div class="row">
                                                    <div class="col-md text-right">
                                                        <a asp-action="GetNewsDetails" asp-route-id="@item.ID" type="button" class="btn btn-warning">Read more</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <img src="assets/img/Ellipse 18.png" style="height:40px ;">
                                                </div>
                                                <div class="col-md-11">
                                                    <small style="padding-right: 20px;">Rajan V. </small><small>
                                                        @item.Time
                                                    </small>
                                                    <p>
                                                        @item.Details
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
